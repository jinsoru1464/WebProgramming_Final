                    <input type="text" class="project-title-input" value="<%= project.title %>" readonly />
                  </div>
                  <hr class="project-divider" />
                  <div class="project-detail">
                    <textarea class="project-description" readonly><%= project.description %></textarea>
                  </div>
                </div>
